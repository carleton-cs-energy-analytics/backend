.PHONY: run debug schema seed drop reseed deploy logs

run:
	DATABASE_HOST=localhost DATABASE_NAME=energy DATABASE_USER=energy DATABASE_PASSWORD="[REDACTED]" pipenv run gunicorn --bind energycomps.its.carleton.edu:8080 --log-file /home/energy/logs/gunicorn.log app

debug:
	FLASK_DEBUG=1 DATABASE_HOST=localhost DATABASE_NAME=energy DATABASE_USER=energy DATABASE_PASSWORD="[REDACTED]" pipenv run gunicorn --bind energycomps.its.carleton.edu:8080 --log-file /home/energy/logs/gunicorn.log app

schema:
	PGPASSWORD="[REDACTED]" /usr/pgsql-10/bin/psql -h localhost -d energy -U energy -f ./migrations/schema.sql

seed:
	PGPASSWORD="[REDACTED]" /usr/pgsql-10/bin/psql -h localhost -d energy -U energy -f ./migrations/seed.sql

drop:
	PGPASSWORD="[REDACTED]" /usr/pgsql-10/bin/psql -h localhost -d energy -U energy -f ./migrations/drop.sql

reseed: drop schema seed

deploy: 
	git pull
	sudo systemctl restart backend

logs:
	sudo journalctl -u backend